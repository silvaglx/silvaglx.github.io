@article{silva2024investigating,
  title={Investigating coral dispersal patterns under future climate change scenarios in Japan},
  author={Silva, Gabriel Lucas Xavier da and Nakamura, Takashi},
  journal={CREST Marine Carbon and PRESTO Marine Biosphere Joint Internal Conference,  Hiroshima (Japan),},
  year={2024},
  publisher={Japan Science and Technology Agency (JST)},
  abstract={Corals have a high dispersal capacity due to the characteristics of their life cycle. During their reproduction phase, hundreds of larvae are released into the water column allowing its dispersion over large distances. These coral larvae are transported by ocean currents until they find a suitable habitat to settle or die, composing a process known as coral connectivity. Our goal here is to assess coral dispersal patterns under historical and future climate change scenarios in order understand the coral poleward expansion pathways in Japan. We aim to address how future oceanographic conditions might shift coral dispersal patterns and identify key areas to support coral conservation in the long-term. 3D Lagrangian Particle Tracking simulations are being conducted for multiple years under different climate scenarios using hydrodynamic fields from the Future Ocean Regional Projection (FORP) JPN02-V4 dataset.},
  preview={cresto.JPG}
}

